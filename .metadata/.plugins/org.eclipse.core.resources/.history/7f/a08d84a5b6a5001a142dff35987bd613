package javaEclipseTest;

import java.time.*;
import java.time.format.*;
import java.util.*;

public class IndexClass {
	
	/*enum Level{
		LOW,
		MEDIUM,
		HIGH
	} */
	
	static Boolean again = true;
	public static void main(String[] args) {
		
		//date and time java api
		/*LocalDateTime currentTimeZone = LocalDateTime.now();
		DateTimeFormatter myFormat = DateTimeFormatter.ofPattern("MM-dd-yyyy \nHH:mm:ss");
		
		System.out.print(currentTimeZone.format(myFormat).toString()); */
		
		Scanner input = new Scanner(System.in);
		
		ArrayList<String> studentName = new ArrayList<String>();
		String studName;
		int listSize = 3, counter = 0;
		
		
		System.out.print("Names\n");
		
		while(listSize-1 >= 0)
		{
			studentName.add(studName = input.nextLine());
			listSize--;
			
		}
		System.out.print("\nCurrent names");
		//display current names
		System.out.println();
		for(String names : studentName) {
			System.out.println(names);
		}
		
		//updates names
		
		for(String names : studentName) {
			
			if(names.equals("shy")) {
				
				studentName.set(counter, "Faker");
			}
			counter++;
		}
		
		//displays updated names
		System.out.print("\nUpdated names");
		System.out.println();
		for(String names : studentName) {
			System.out.println(names);
		}
	}
	
	
	
}
