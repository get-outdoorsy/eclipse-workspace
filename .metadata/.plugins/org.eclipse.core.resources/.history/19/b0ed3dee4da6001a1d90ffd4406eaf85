package javaEclipseTest;

import java.io.*;

public class FileTest {
	
	public FileTest(){
		createFile();
		writeFile();
	}
	
	public static void createFile() {
		try {
			File newFile = new File("C:\\Users\\Epoy\\Desktop\\testNewFile.txt");
			if(newFile.createNewFile()) {
				System.out.print("File created: "+newFile.getName());
			}else {
				System.out.print("File already exists");
			}
		}catch(Exception e) {
			System.out.print("Something went wrong.");
			e.printStackTrace();
		}
	}
	
	public static void writeFile() {
		try {
			FileWriter editFile = new FileWriter("ito.txt");
			editFile.write("Kamista kana jay?");
			editFile.close();
			System.out.print("Successful file write.");
		}catch(Exception e) {
			System.out.print("Error occured.");
			e.printStackTrace();
		}
	}
}
