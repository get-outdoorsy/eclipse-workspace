package javaEclipseTest;

import java.util.HashMap;
import java.util.Scanner;

public class IndexClass {
	
	public static void main(String[] args) {
		// hash maps also stores values. ang pinag kaiba lang nag sstore sya ng keys with corresponding value. the data type of index can vary depende sa ilalagay ng dev. 
		Scanner input = new Scanner(System.in);
		HashMap<String, String> capitalCity = new HashMap<String, String>();
		String capital, city;
		
		int counter = 1;
		
		System.out.print("Enter country and city");
		while(counter <=3)
		{
			System.out.print("Enter country: ");
			city = input.nextLine();
			System.out.print("Enter city: ");
			capital = input.nextLine();
			
			capitalCity.put(city, capital);
			counter++;
		}
		
		System.out.print(capitalCity);
	}
}
