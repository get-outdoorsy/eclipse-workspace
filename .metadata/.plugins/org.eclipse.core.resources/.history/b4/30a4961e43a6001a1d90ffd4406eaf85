package javaEclipseTest;

import java.util.HashMap;
import java.util.Scanner;

public class IndexClass {
	
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		HashMap<String, String> capitalCity = new HashMap<String, String>();
		String capital, city;
		
		int counter = 1;
		
		System.out.print("Enter country and city");
		while(counter <=3)
		{
			System.out.print("\nEnter country: ");
			city = input.nextLine();
			System.out.print("\nEnter city: ");
			capital = input.nextLine();
			
			capitalCity.put(city, capital);
			counter++;
		}
		
		System.out.print(capitalCity);
	}
}
